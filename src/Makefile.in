ifneq ($(PEBIL_SWAP_MOD),)
ifneq ($(PEBIL_SWAP_OFF),)
DEBUGFLAGS    = -D SWAP_MOD=$(PEBIL_SWAP_MOD) -D SWAP_MOD_OFF=$(PEBIL_SWAP_OFF)
endif
endif

CXX         = g++
CXXFLAGS    = -g -O2 -std=gnu++0x -DHAVE_UNORDERED_MAP -DHAVE_MPI -w $(DEBUGFLAGS)

AR          = ar cru
EXTRA_FLAGS =
SHARED_OPT  = -fPIC
SHARED_LIB  = -shared

BINDIR      = ../bin
LIBDIR      = ../lib
EXTDIR      = ../external
INCLUDE     = -I../include -I$(EXTDIR)/udis86-1.7/ -I../instcode

NAMES = AddressAnchor Base BasicBlock BinaryFile DynamicTable DwarfSection ElfFile ElfFileInst FileHeader FlowGraph Function GlobalOffsetTable GnuVersion HashTable Instrumentation InstrumentationTool LengauerTarjan LineInformation Loop MemTrack NoteSection ProgramHeader RawSection RelocationTable SectionHeader StringTable SymbolTable TextSection X86Instruction X86InstructionFactory HybridPhiElfFile

SRCS = $(foreach var,$(NAMES),$(var).C)
OBJS = $(foreach var,$(NAMES),$(var).o)

TARGETS  = libpebilinst.so libpebilinst.a

all: $(TARGETS)

libpebilinst.so: $(OBJS)
	$(CXX) $(CXXFLAGS) $(SHARED_LIB) -o $@ $(OBJS)

libpebilinst.a: $(OBJS)
	$(AR) $@ $(OBJS)

%.o: %.C
	$(CXX) $(CXXFLAGS) $(EXTRA_FLAGS) $(SHARED_OPT) $(INCLUDE) -c -o $@ $<

clean: 
	rm -f *inst core *.o *.ii *.s $(TARGETS)

cleandebug:
	rm -f ElfFileInst.o $(TARGETS)

depend:
	g++ -E -MM $(INCLUDE) $(SRCS) > DEPENDS

install: $(TARGETS)
	cp $(TARGETS) $(LIBDIR)

include DEPENDS
